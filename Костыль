local octets_to_compare=0  # Количество октетов для сравнения

  # Определение количества октетов для сравнения на основе маски сети
  for mask_octet in "${mask_octets[@]}"; do
    if [ "$mask_octet" -eq 255 ]; then
      octets_to_compare=$((octets_to_compare + 1))
    else
      break  # Как только встречен октет, отличный от 255, выходим из цикла
    fi
  done

  # Сравнение октетов IP-адресов
  for ((i = 0; i < octets_to_compare; i++)); do
    local ip1_octet="${ip1_octets[$i]}"
    local ip2_octet="${ip2_octets[$i]}"

    if [ "$ip1_octet" -ne "$ip2_octet" ]; then
      echo "IP-адреса не принадлежат одной подсети" >&2
      return 1
    fi
  done

  return 0  # Оба IP-адреса находятся в одной подсети
}

